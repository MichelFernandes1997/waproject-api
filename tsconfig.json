{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   }
}